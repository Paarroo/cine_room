<div class="glass-effect rounded-3xl p-6">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-xl font-bold text-white">
      <i class="fas fa-film text-primary mr-2"></i>
      Films en Attente
    </h3>
    <% pending_count = movies.length %>
    <span class="bg-yellow-500/20 text-yellow-300 px-3 py-1 rounded-full text-sm font-medium">
      <%= pending_count %> en attente
    </span>
  </div>

  <% if movies.any? %>
    <div class="space-y-3">
      <% movies.each do |movie| %>
        <div class="flex items-center justify-between p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-16 bg-gradient-to-br from-red-500 to-pink-600 rounded-xl flex items-center justify-center text-white font-bold text-xs">
              <%= movie.title.first(2).upcase %>
            </div>
            <div>
              <h4 class="font-semibold text-white"><%= movie.title %></h4>
              <p class="text-sm text-gray-400">
                <%= movie.director %> • <%= movie.year %>
              </p>
              <p class="text-xs text-gray-500">
                Par <%= movie.user&.full_name || 'Créateur inconnu' %>
              </p>
            </div>
          </div>

          <div class="flex items-center space-x-2">
            <%= link_to "/admin/movies/#{movie.id}",
                class: "px-3 py-1 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-lg text-sm transition-colors",
                data: { turbo_frame: "_top" } do %>
              <i class="fas fa-eye mr-1"></i>Voir
            <% end %>

            <%= button_to "/admin/movies/#{movie.id}/validate_movie",
                method: :patch,
                class: "px-3 py-1 bg-green-500/20 hover:bg-green-500/30 text-green-400 rounded-lg text-sm transition-colors",
                data: {
                  confirm: "Valider ce film ?",
                  turbo_method: :patch,
                  turbo_frame: "_top"
                } do %>
              <i class="fas fa-check mr-1"></i>Valider
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "/admin/movies",
          class: "inline-flex items-center px-4 py-2 bg-primary/20 hover:bg-primary/30 text-primary rounded-lg transition-colors" do %>
        <i class="fas fa-list mr-2"></i>
        Voir tous les films en attente
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <i class="fas fa-check-circle text-4xl text-green-400 mb-4"></i>
      <p class="text-gray-400">Aucun film en attente de validation</p>
      <p class="text-sm text-gray-500 mt-2">Tous les films soumis ont été traités</p>
    </div>
  <% end %>
</div>
