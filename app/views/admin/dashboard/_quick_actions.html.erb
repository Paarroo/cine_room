<!-- Quick Actions Section with uniform buttons and proper functionality -->
<section class="quick-actions py-8">
  <div class="container-app">
    <div class="glass-effect rounded-3xl p-8">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-3xl font-bold text-white">
          <i class="fas fa-bolt text-primary mr-3"></i>
          Actions Rapides
        </h3>
      </div>

      <!-- Navigation Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
        <!-- Movies Management Card -->
        <div class="quick-action-card glass-effect rounded-2xl p-6 hover:bg-white/10 transition-all duration-300 cursor-pointer group">
          <%= link_to admin_movies_path, class: "block" do %>
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-orange-500/20 rounded-xl flex items-center justify-center group-hover:bg-orange-500/30 transition-colors">
                <i class="fas fa-film text-orange-400 text-xl"></i>
              </div>
              <i class="fas fa-arrow-right text-gray-400 group-hover:text-white transition-colors"></i>
            </div>
            <h4 class="text-lg font-semibold text-white mb-1">Gérer Films</h4>
            <p class="text-sm text-gray-400">
              <%= @quick_stats[:pending_movies] %> en attente
            </p>
          <% end %>
        </div>

        <!-- Events Management Card -->
        <div class="quick-action-card glass-effect rounded-2xl p-6 hover:bg-white/10 transition-all duration-300 cursor-pointer group">
          <%= link_to admin_events_path, class: "block" do %>
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-blue-500/20 rounded-xl flex items-center justify-center group-hover:bg-blue-500/30 transition-colors">
                <i class="fas fa-calendar-alt text-blue-400 text-xl"></i>
              </div>
              <i class="fas fa-arrow-right text-gray-400 group-hover:text-white transition-colors"></i>
            </div>
            <h4 class="text-lg font-semibold text-white mb-1">Événements</h4>
            <p class="text-sm text-gray-400">
              <%= @quick_stats[:upcoming_events] %> à venir
            </p>
          <% end %>
        </div>

        <!-- Users Management Card -->
        <div class="quick-action-card glass-effect rounded-2xl p-6 hover:bg-white/10 transition-all duration-300 cursor-pointer group">
          <%= link_to admin_users_path, class: "block" do %>
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-green-500/20 rounded-xl flex items-center justify-center group-hover:bg-green-500/30 transition-colors">
                <i class="fas fa-users text-green-400 text-xl"></i>
              </div>
              <i class="fas fa-arrow-right text-gray-400 group-hover:text-white transition-colors"></i>
            </div>
            <h4 class="text-lg font-semibold text-white mb-1">Utilisateurs</h4>
            <p class="text-sm text-gray-400">
              <%= @quick_stats[:total_users] %> total
            </p>
          <% end %>
        </div>

        <!-- Participations Management Card -->
        <div class="quick-action-card glass-effect rounded-2xl p-6 hover:bg-white/10 transition-all duration-300 cursor-pointer group">
          <%= link_to admin_participations_path, class: "block" do %>
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-yellow-500/20 rounded-xl flex items-center justify-center group-hover:bg-yellow-500/30 transition-colors">
                <i class="fas fa-ticket-alt text-yellow-400 text-xl"></i>
              </div>
              <i class="fas fa-arrow-right text-gray-400 group-hover:text-white transition-colors"></i>
            </div>
            <h4 class="text-lg font-semibold text-white mb-1">Réservations</h4>
            <p class="text-sm text-gray-400">
              <%= @quick_stats[:pending_participations] %> en attente
            </p>
          <% end %>
        </div>

        <!-- Reviews Management Card -->
        <div class="quick-action-card glass-effect rounded-2xl p-6 hover:bg-white/10 transition-all duration-300 cursor-pointer group">
          <%= link_to admin_reviews_path, class: "block" do %>
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-purple-500/20 rounded-xl flex items-center justify-center group-hover:bg-purple-500/30 transition-colors">
                <i class="fas fa-star text-purple-400 text-xl"></i>
              </div>
              <i class="fas fa-arrow-right text-gray-400 group-hover:text-white transition-colors"></i>
            </div>
            <h4 class="text-lg font-semibold text-white mb-1">Avis</h4>
          <% end %>
        </div>
      </div>

      <!-- Action Buttons Grid - All uniform size -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
        <!-- Export Movies Button -->
        <button
          class="management-action-btn h-14 px-4 py-3 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-xl transition-colors flex items-center justify-center text-sm font-medium"
          data-action="click->admin-dashboard#exportData"
          data-type="movies"
          title="Export movies list to CSV"
        >
          <i class="fas fa-download mr-2"></i>
          <span class="truncate">Export Films</span>
        </button>

        <!-- Export Events Button -->
        <button
          class="management-action-btn h-14 px-4 py-3 bg-green-500/20 hover:bg-green-500/30 text-green-400 rounded-xl transition-colors flex items-center justify-center text-sm font-medium"
          data-action="click->admin-dashboard#exportData"
          data-type="events"
          title="Export events list to CSV"
        >
          <i class="fas fa-download mr-2"></i>
          <span class="truncate">Export Événements</span>
        </button>

        <!-- Export Participations Button -->
        <button
          class="management-action-btn h-14 px-4 py-3 bg-yellow-500/20 hover:bg-yellow-500/30 text-yellow-400 rounded-xl transition-colors flex items-center justify-center text-sm font-medium"
          data-action="click->admin-dashboard#exportData"
          data-type="participations"
          title="Export participations list to CSV"
        >
          <i class="fas fa-download mr-2"></i>
          <span class="truncate">Export Réservations</span>
        </button>

        <!-- Database Backup Button -->
        <button
          class="management-action-btn h-14 px-4 py-3 bg-purple-500/20 hover:bg-purple-500/30 text-purple-400 rounded-xl transition-colors flex items-center justify-center text-sm font-medium"
          data-action="click->admin-dashboard#backupDatabase"
          title="Create database backup"
        >
          <i class="fas fa-database mr-2"></i>
          <span class="truncate">Sauvegarde BDD</span>
        </button>

        <!-- Maintenance Mode Button -->
        <button
          class="management-action-btn h-14 px-4 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-xl transition-colors flex items-center justify-center text-sm font-medium"
          data-action="click->admin-dashboard#toggleMaintenanceMode"
          title="Toggle maintenance mode"
        >
          <i class="fas fa-tools mr-2"></i>
          <span class="truncate">Mode Maintenance</span>
        </button>
      </div>

      <!-- Action Status Indicator -->
      <div class="mt-6 text-center">
        <div class="inline-flex items-center px-4 py-2 bg-white/5 rounded-lg">
          <div class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></div>
          <span class="text-sm text-gray-400">
            Système opérationnel - Dernière mise à jour:
            <span data-admin-dashboard-target="lastUpdated">--:--:--</span>
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
