<%= render 'admin/dashboard/navbar' %>

<div class="admin-dashboard min-h-screen bg-dark-400">
  <!-- Page Header -->
  <div class="dashboard-header">
    <div class="welcome-section glass-effect rounded-3xl p-8 mt-20">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <div class="flex-1 min-width-0">
          <h1 class="text-4xl lg:text-5xl font-bold mb-3 gradient-text">
            <i class="fas fa-calendar-alt mr-4"></i>
            Gestion des Événements
          </h1>
          <p class="text-xl text-gray-300 mb-2">
            Administration des événements CinéRoom
          </p>
          <p class="text-gray-400 text-base">
            <%= @stats[:total] %> événements au total • <%= @stats[:upcoming] %> à venir
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <section class="stats-overview py-6">
    <div class="container-app">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="text-3xl font-bold text-blue-400 mb-2">
            <%= @stats[:total] %>
          </div>
          <div class="text-sm text-gray-400">Total Événements</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="text-3xl font-bold text-green-400 mb-2">
            <%= @stats[:upcoming] %>
          </div>
          <div class="text-sm text-gray-400">À venir</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="text-3xl font-bold text-yellow-400 mb-2">
            <%= @stats[:completed] %>
          </div>
          <div class="text-sm text-gray-400">Terminés</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="text-3xl font-bold text-red-400 mb-2">
            <%= @stats[:sold_out] %>
          </div>
          <div class="text-sm text-gray-400">Complets</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Events List -->
  <section class="events-list py-8">
    <div class="container-app">
      <div class="glass-effect rounded-3xl p-6">
        <h3 class="text-xl font-bold text-white mb-6">
          <i class="fas fa-list text-primary mr-2"></i>
          Liste des Événements
        </h3>

        <div class="space-y-4">
          <% @events.each do |event| %>
            <div class="glass-subtle rounded-xl p-6 hover:bg-white/10 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <h4 class="text-lg font-semibold text-white mb-2">
                    <%= event.title %>
                  </h4>
                  <div class="flex items-center space-x-4 text-sm text-gray-400">
                    <span>
                      <i class="fas fa-map-marker-alt mr-1"></i>
                      <%= event.venue_name %>
                    </span>
                    <span>
                      <i class="fas fa-calendar mr-1"></i>
                      <%= event.event_date.strftime("%d/%m/%Y") %>
                    </span>
                    <span>
                      <i class="fas fa-users mr-1"></i>
                      <%= event.participations.where(status: :confirmed).sum(:seats) %>/<%= event.max_capacity %>
                    </span>
                  </div>
                </div>

                <div class="flex items-center space-x-3">
                  <span class="px-3 py-1 bg-blue-500/20 text-blue-300 rounded-full text-xs font-medium">
                    <%= event.status.humanize %>
                  </span>
                  <%= link_to admin_event_path(event),
                      class: "px-3 py-2 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-lg text-sm transition-colors" do %>
                    <i class="fas fa-eye mr-1"></i>Voir
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
