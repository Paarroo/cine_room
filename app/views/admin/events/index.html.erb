                      <i class="fas fa-calendar mr-1 flex-shrink-0"></i>
                      <%= event.event_date.strftime("%d/%m/%y") %>
                    </span>
                    <span class="flex items-center">
                      <i class="fas fa-users mr-1 flex-shrink-0"></i>
                      <%= event.participations.where(status: :confirmed).sum(:seats) %>/<%= event.max_capacity %>
                    </span>
                    <% if event.geocoding_status.present? && event.geocoding_status != 'success' %>
                      <span class="px-2 py-1 bg-red-500/20 text-red-300 rounded text-xs flex-shrink-0" title="Statut g√©ocodage: <%= event.geocoding_status %>">
                        üó∫Ô∏è <%= event.geocoding_status %>
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="flex flex-wrap items-center gap-2 sm:gap-3 lg:flex-nowrap">
                  <span class="px-2 sm:px-3 py-1 bg-blue-500/20 text-blue-300 rounded-full text-xs font-medium whitespace-nowrap">
                    <%= event.status.humanize %>
                  </span>
                  <%= link_to admin_event_path(event),
                      class: "px-2 sm:px-3 py-2 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-lg text-xs sm:text-sm transition-colors whitespace-nowrap" do %>
                    <i class="fas fa-eye mr-1"></i><span class="hidden sm:inline">Voir</span>
                  <% end %>
                  <%= link_to edit_admin_event_path(event),
                      class: "px-2 sm:px-3 py-2 bg-gray-500/20 hover:bg-gray-500/30 text-gray-400 rounded-lg text-xs sm:text-sm transition-colors whitespace-nowrap" do %>
                    <i class="fas fa-edit mr-1"></i><span class="hidden sm:inline">Modifier</span>
                  <% end %>
                  <%= link_to admin_event_path(event), method: :delete,
                      confirm: "√ätes-vous s√ªr de vouloir supprimer cet √©v√©nement ?",
                      class: "px-2 sm:px-3 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg text-xs sm:text-sm transition-colors whitespace-nowrap" do %>
                    <i class="fas fa-trash mr-1"></i><span class="hidden sm:inline">Supprimer</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
