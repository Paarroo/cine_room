<%= render 'admin/dashboard/navbar' %>

<div
  class="admin-dashboard min-h-screen bg-dark-400"
  data-controller="admin-dashboard admin-flash"
>
  <!-- Page Header -->
  <div class="dashboard-header">
    <div class="welcome-section glass-effect rounded-3xl p-8 mt-20">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <!-- Title Section -->
        <div class="flex-1 min-width-0">
          <h1 class="text-4xl lg:text-5xl font-bold mb-3 gradient-text">
            <i class="fas fa-film mr-4"></i>
            Gestion des Films
          </h1>
          <p class="text-xl text-gray-300 mb-2">
            Administration et validation des contenus
          </p>
          <p class="text-gray-400 text-base">
            <%= @stats[:total] %> films au total • <%= @stats[:pending] %> en attente
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="mt-6 lg:mt-0 flex flex-wrap gap-4">
          <button
            class="btn-primary"
            data-action="click->admin-dashboard#exportData"
            data-type="movies"
          >
            <i class="fas fa-download mr-2"></i>
            Exporter
          </button>

          <!-- Bulk Actions -->
          <div class="bulk-actions hidden" id="bulk-actions">
            <button
              class="px-4 py-2 bg-green-500/20 hover:bg-green-500/30 text-green-400 rounded-xl transition-colors"
              data-action="click->admin-movies#bulkValidate"
            >
              <i class="fas fa-check mr-2"></i>
              Valider sélection
            </button>
            <button
              class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-xl transition-colors"
              data-action="click->admin-movies#bulkReject"
            >
              <i class="fas fa-times mr-2"></i>
              Rejeter sélection
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <section class="stats-overview py-6">
    <div class="container-app">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-film text-blue-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-blue-400 mb-2">
            <%= @stats[:total] %>
          </div>
          <div class="text-sm text-gray-400">Total Films</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-yellow-400/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-clock text-yellow-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-yellow-400 mb-2">
            <%= @stats[:pending] %>
          </div>
          <div class="text-sm text-gray-400">En Attente</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-green-400/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-check text-green-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-green-400 mb-2">
            <%= @stats[:approved] %>
          </div>
          <div class="text-sm text-gray-400">Validés</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-red-400/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-times text-red-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-red-400 mb-2">
            <%= @stats[:rejected] %>
          </div>
          <div class="text-sm text-gray-400">Rejetés</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters Section -->
  <%= render 'filters' %>

  <!-- Movies List -->
  <section class="movies-list py-8">
    <div class="container-app">
      <div
        class="glass-effect rounded-3xl p-6"
        data-controller="admin-movies"
      >
        <!-- List Header -->
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-white">
            <i class="fas fa-list text-primary mr-2"></i>
            Liste des Films
          </h3>

          <!-- Select All Checkbox -->
          <div class="flex items-center space-x-4">
            <label class="flex items-center space-x-2">
              <input
                type="checkbox"
                class="w-4 h-4 text-primary bg-transparent border-gray-300 rounded focus:ring-primary"
                data-admin-movies-target="selectAll"
                data-action="change->admin-movies#toggleSelectAll"
              >
              <span class="text-sm text-gray-400">Tout sélectionner</span>
            </label>

            <span class="text-sm text-gray-400">
              <%= @movies.count %> résultats
            </span>
          </div>
        </div>

        <!-- Movies Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
          <% if @movies.any? %>
            <% @movies.each do |movie| %>
              <%= render 'movie_card', movie: movie %>
            <% end %>
          <% else %>
            <!-- Empty State -->
            <div class="col-span-full text-center py-12">
              <i class="fas fa-film text-6xl text-gray-600 mb-4"></i>
              <h3 class="text-xl font-semibold text-gray-400 mb-2">Aucun film trouvé</h3>
              <p class="text-gray-500">
                <% if params[:q].present? || params[:status].present? %>
                  Essayez de modifier vos critères de recherche
                <% else %>
                  Aucun film n'a encore été soumis
                <% end %>
              </p>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @movies.respond_to?(:total_pages) && @movies.total_pages > 1 %>
          <div class="mt-8 flex justify-center">
            <%= paginate @movies, theme: 'twitter_bootstrap_4' %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
