<section class="stats-overview py-6">
  <div class="container-app">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">

      <!-- Total Participations -->
      <div class="metric-card glass-effect rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center">
            <i class="fas fa-ticket-alt text-blue-400 text-xl"></i>
          </div>
        </div>
        <div class="text-3xl font-bold text-blue-400 mb-2">
          <%= @stats[:total] %>
        </div>
        <div class="text-sm text-gray-400">Total Réservations</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= @stats[:today] %> aujourd'hui
        </div>
      </div>

      <!-- Pending Participations -->
      <div class="metric-card glass-effect rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-yellow-400/10 rounded-xl flex items-center justify-center">
            <i class="fas fa-clock text-yellow-400 text-xl"></i>
          </div>
        </div>
        <div class="text-3xl font-bold text-yellow-400 mb-2">
          <%= @stats[:pending] %>
        </div>
        <div class="text-sm text-gray-400">En Attente</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= number_to_percentage((@stats[:pending].to_f / @stats[:total] * 100), precision: 1) %> du total
        </div>
      </div>

      <!-- Confirmed Participations -->
      <div class="metric-card glass-effect rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-green-400/10 rounded-xl flex items-center justify-center">
            <i class="fas fa-check text-green-400 text-xl"></i>
          </div>
        </div>
        <div class="text-3xl font-bold text-green-400 mb-2">
          <%= @stats[:confirmed] %>
        </div>
        <div class="text-sm text-gray-400">Confirmées</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= number_to_percentage((@stats[:confirmed].to_f / @stats[:total] * 100), precision: 1) %> du total
        </div>
      </div>

      <!-- Cancelled Participations -->
      <div class="metric-card glass-effect rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-red-400/10 rounded-xl flex items-center justify-center">
            <i class="fas fa-times text-red-400 text-xl"></i>
          </div>
        </div>
        <div class="text-3xl font-bold text-red-400 mb-2">
          <%= @stats[:cancelled] %>
        </div>
        <div class="text-sm text-gray-400">Annulées</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= number_to_percentage((@stats[:cancelled].to_f / @stats[:total] * 100), precision: 1) %> du total
        </div>
      </div>
    </div>
  </div>
</section>
