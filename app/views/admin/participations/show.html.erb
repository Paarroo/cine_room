<div class="admin-dashboard min-h-screen bg-dark-400">
  <!-- Breadcrumb -->
  <div class="breadcrumb-section pt-6 pb-4">
    <div class="container-app">
      <nav class="flex items-center space-x-2 text-sm">
        <%= link_to admin_dashboard_index_path, class: "text-gray-400 hover:text-primary transition-colors" do %>
          <i class="fas fa-home mr-1"></i>Dashboard
        <% end %>
        <i class="fas fa-chevron-right text-gray-600"></i>
        <%= link_to admin_participations_path, class: "text-gray-400 hover:text-primary transition-colors" do %>
          Participations
        <% end %>
        <i class="fas fa-chevron-right text-gray-600"></i>
        <span class="text-white">Participation #<%= @participation.id %></span>
      </nav>
    </div>
  </div>

  <!-- Participation Details Header -->
  <section class="participation-header py-8">
    <div class="container-app">
      <div class="glass-effect rounded-3xl p-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">

          <!-- Status & Actions -->
          <div class="lg:col-span-1 min-w-0">
            <!-- Status Badge -->
            <div class="text-center mb-6">
              <% case @participation_data[:status] %>
              <% when 'pending' %>
                <span class="px-4 py-3 bg-yellow-500/20 text-yellow-300 rounded-xl text-sm lg:text-lg font-medium block">
                  <i class="fas fa-clock mr-2"></i>En attente
                </span>
              <% when 'confirmed' %>
                <span class="px-4 py-3 bg-green-500/20 text-green-300 rounded-xl text-sm lg:text-lg font-medium block">
                  <i class="fas fa-check mr-2"></i>Confirmée
                </span>
              <% when 'cancelled' %>
                <span class="px-4 py-3 bg-red-500/20 text-red-300 rounded-xl text-sm lg:text-lg font-medium block">
                  <i class="fas fa-times mr-2"></i>Annulée
                </span>
              <% end %>
            </div>

            <!-- Payment Status -->
            <div class="text-center mb-6">
              <% if @participation_data[:has_payment] %>
                <div class="px-3 py-2 bg-green-500/20 text-green-400 rounded-lg text-sm">
                  <i class="fas fa-credit-card mr-2"></i>Paiement effectué
                </div>
                <p class="text-xs text-gray-500 mt-2 break-all px-2">
                  ID: <%= @participation_data[:stripe_payment_id] %>
                </p>
              <% else %>
                <div class="px-3 py-2 bg-gray-500/20 text-gray-400 rounded-lg text-sm">
                  <i class="fas fa-credit-card mr-2"></i>Aucun paiement
                </div>
              <% end %>
            </div>

            <!-- Action Buttons -->
            <% if @can_modify %>
              <div class="space-y-3">
                <% if @participation.pending? %>
                  <%= button_to admin_participation_path(@participation),
                      method: :patch,
                      params: { status: 'confirmed' },
                      class: "w-full px-4 py-3 bg-gradient-to-r from-primary to-primary/90 hover:from-primary/90 hover:to-primary text-content rounded-xl transition-colors font-medium text-sm",
                      data: { confirm: "Confirmer cette participation ?" } do %>
                    <i class="fas fa-check mr-2"></i><span class="truncate">Confirmer</span>
                  <% end %>

                  <%= button_to admin_participation_path(@participation),
                      method: :patch,
                      params: { status: 'cancelled' },
                      class: "w-full px-4 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-xl transition-colors font-medium text-sm",
                      data: { confirm: "Annuler cette participation ?" } do %>
                    <i class="fas fa-times mr-2"></i><span class="truncate">Annuler</span>
                  <% end %>
                <% elsif @participation.confirmed? %>
                  <%= button_to admin_participation_path(@participation),
                      method: :patch,
                      params: { status: 'cancelled' },
                      class: "w-full px-4 py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-xl transition-colors font-medium text-sm",
                      data: { confirm: "Annuler cette participation confirmée ?" } do %>
                    <i class="fas fa-times mr-2"></i><span class="truncate">Annuler</span>
                  <% end %>
                <% elsif @participation.cancelled? %>
                  <%= button_to admin_participation_path(@participation),
                      method: :patch,
                      params: { status: 'pending' },
                      class: "w-full px-4 py-3 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-xl transition-colors font-medium text-sm",
                      data: { confirm: "Remettre en attente cette participation ?" } do %>
                    <i class="fas fa-undo mr-2"></i><span class="truncate">Remettre en Attente</span>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-4 px-2">
                <p class="text-gray-500 text-xs lg:text-sm">
                  <i class="fas fa-lock mr-1"></i>
                  <span class="block">Participation non modifiable</span>
                  <span class="text-xs">(événement passé ou annulé)</span>
                </p>
              </div>
            <% end %>
          </div>

          <!-- Participation Information -->
          <div class="lg:col-span-2">
            <div class="space-y-6">
              <!-- Main Info -->
              <div>
                <h1 class="text-3xl font-bold gradient-text mb-3">
                  Participation #<%= @participation.id %>
                </h1>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                  <div class="glass-subtle rounded-xl p-4 min-w-0">
                    <div class="text-sm text-gray-400 mb-1">Places</div>
                    <div class="text-2xl font-semibold text-white"><%= @participation_data[:seats] %></div>
                  </div>
                  <div class="glass-subtle rounded-xl p-4 min-w-0">
                    <div class="text-sm text-gray-400 mb-1">Prix Total</div>
                    <div class="text-2xl font-semibold text-primary truncate"><%= @participation_data[:formatted_total_price] %></div>
                  </div>
                  <div class="glass-subtle rounded-xl p-4 min-w-0">
                    <div class="text-sm text-gray-400 mb-1">Date Participation</div>
                    <div class="text-lg font-semibold text-white"><%= @participation_data[:formatted_created_at] %></div>
                  </div>
                  <div class="glass-subtle rounded-xl p-4 min-w-0">
                    <div class="text-sm text-gray-400 mb-1">Statut</div>
                    <div class="text-lg font-semibold text-white truncate"><%= @participation_data[:status_humanized] %></div>
                  </div>
                </div>
              </div>

              <!-- User Information -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-3">
                  <i class="fas fa-user text-primary mr-2"></i>Utilisateur
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center text-white font-bold">
                      <%= @user&.full_name&.first(2)&.upcase || 'U' %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="text-lg font-semibold text-white truncate">
                        <%= @participation_data[:user_name] %>
                      </div>
                      <div class="text-sm text-gray-400 truncate">
                        <%= @user&.email || 'Email non disponible' %>
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= @user&.role&.humanize || 'Utilisateur' %> •
                        Membre depuis <%= @user&.created_at&.strftime("%B %Y") || 'Date inconnue' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Event Information -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-3">
                  <i class="fas fa-calendar-alt text-primary mr-2"></i>Événement
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <h4 class="text-lg font-semibold text-white mb-3 truncate">
                    <%= @participation_data[:event_title] %>
                  </h4>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <div class="text-sm text-gray-400 mb-1">Date de l'événement</div>
                      <div class="text-white"><%= @event&.event_date&.strftime("%d %B %Y") %></div>
                    </div>
                    <div>
                      <div class="text-sm text-gray-400 mb-1">Heure</div>
                      <div class="text-white"><%= @event&.start_time&.strftime("%H:%M") %></div>
                    </div>
                    <div>
                      <div class="text-sm text-gray-400 mb-1">Lieu</div>
                      <div class="text-white truncate"><%= @event&.venue_name %></div>
                    </div>
                    <div>
                      <div class="text-sm text-gray-400 mb-1">Adresse</div>
                      <div class="text-white truncate" title="<%= @event&.venue_address %>"><%= @event&.venue_address %></div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Movie Information -->
              <% if @movie %>
                <div>
                  <h3 class="text-xl font-semibold text-white mb-3">
                    <i class="fas fa-film text-primary mr-2"></i>Film
                  </h3>
                  <div class="glass-subtle rounded-xl p-6">
                    <div class="flex space-x-4">
                      <div class="w-16 h-20 bg-gradient-to-br from-red-500 to-pink-600 rounded-xl flex items-center justify-center text-white font-bold text-xs">
                        <%= @movie.title.first(2).upcase %>
                      </div>
                      <div class="flex-1">
                        <h4 class="text-lg font-semibold text-white mb-2 truncate">
                          <%= @participation_data[:movie_title] %>
                        </h4>
                        <div class="grid grid-cols-2 gap-4 text-sm">
                          <div>
                            <span class="text-gray-400">Réalisateur:</span>
                            <span class="text-white ml-2 truncate block sm:inline"><%= @movie.director %></span>
                          </div>
                          <div>
                            <span class="text-gray-400">Année:</span>
                            <span class="text-white ml-2"><%= @movie.year %></span>
                          </div>
                          <div>
                            <span class="text-gray-400">Genre:</span>
                            <span class="text-white ml-2"><%= @movie.genre %></span>
                          </div>
                          <div>
                            <span class="text-gray-400">Durée:</span>
                            <span class="text-white ml-2"><%= @movie.duration %> min</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Technical Information -->
              <div>
                <h3 class="text-xl font-semibold text-white mb-3">
                  <i class="fas fa-cog text-primary mr-2"></i>Informations Techniques
                </h3>
                <div class="glass-subtle rounded-xl p-6">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                    <div class="min-w-0">
                      <span class="text-gray-400">ID Participation:</span>
                      <span class="text-white ml-2">#<%= @participation.id %></span>
                    </div>
                    <div class="min-w-0">
                      <span class="text-gray-400">ID Stripe:</span>
                      <div class="text-white text-xs break-all mt-1" title="<%= @participation_data[:stripe_payment_id] %>">
                        <%= @participation_data[:stripe_payment_id] || 'Non renseigné' %>
                      </div>
                    </div>
                    <div class="min-w-0">
                      <span class="text-gray-400">Créée le:</span>
                      <span class="text-white ml-2 truncate block sm:inline">
                        <%= @participation_data[:created_at]&.strftime("%d/%m/%Y à %H:%M") %>
                      </span>
                    </div>
                    <div class="min-w-0">
                      <span class="text-gray-400">Modifiée le:</span>
                      <span class="text-white ml-2 truncate block sm:inline">
                        <%= @participation_data[:updated_at]&.strftime("%d/%m/%Y à %H:%M") %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Back to List Button -->
  <section class="back-section py-8">
    <div class="container-app text-center">
      <%= link_to admin_participations_path, class: "btn-secondary" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        Retour à la liste des participations
      <% end %>
    </div>
  </section>
</div>
