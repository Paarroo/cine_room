<%= render 'admin/dashboard/navbar' %>

<div
  class="admin-dashboard min-h-screen bg-dark-400"
  data-controller="admin-dashboard admin-flash"
>
  <!-- Page Header -->
  <div class="dashboard-header">
    <div class="welcome-section glass-effect rounded-3xl p-8 mt-20">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <!-- Title Section -->
        <div class="flex-1 min-width-0">
          <h1 class="text-4xl lg:text-5xl font-bold mb-3 gradient-text">
            <i class="fas fa-star mr-4"></i>
            Gestion des Avis
          </h1>
          <p class="text-xl text-gray-300 mb-2">
            Modération et analyse des commentaires
          </p>
          <p class="text-gray-400 text-base">
            <%= @stats[:total] %> avis au total • Note moyenne: <%= @stats[:average_rating] %>/5
          </p>
        </div>

          <!-- Bulk Actions -->
          <div class="bulk-actions hidden" id="bulk-actions">
            <button
              class="px-4 py-2 bg-green-500/20 hover:bg-green-500/30 text-green-400 rounded-xl transition-colors"
              data-action="click->admin-reviews#bulkApprove"
            >
              <i class="fas fa-check mr-2"></i>
              Approuver sélection
            </button>
            <button
              class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-xl transition-colors"
              data-action="click->admin-reviews#bulkReject"
            >
              <i class="fas fa-times mr-2"></i>
              Rejeter sélection
            </button>
            <button
              class="px-4 py-2 bg-yellow-500/20 hover:bg-yellow-500/30 text-yellow-400 rounded-xl transition-colors"
              data-action="click->admin-reviews#bulkFlag"
            >
              <i class="fas fa-flag mr-2"></i>
              Signaler sélection
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <section class="stats-overview py-6">
    <div class="container-app">
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-star text-blue-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-blue-400 mb-2">
            <%= @stats[:total] %>
          </div>
          <div class="text-sm text-gray-400">Total Avis</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-yellow-400/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-star-half-alt text-yellow-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-yellow-400 mb-2">
            <%= @stats[:average_rating] %>
          </div>
          <div class="text-sm text-gray-400">Note Moyenne</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-green-400/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-comment text-green-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-green-400 mb-2">
            <%= @stats[:with_comment] %>
          </div>
          <div class="text-sm text-gray-400">Avec Commentaire</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-clock text-purple-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-purple-400 mb-2">
            <%= @stats[:recent] %>
          </div>
          <div class="text-sm text-gray-400">Récents (30j)</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-red-500/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-flag text-red-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-red-400 mb-2">
            <%= @stats[:flagged] %>
          </div>
          <div class="text-sm text-gray-400">Signalés</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters Section -->
  <%= render 'filters' %>

  <!-- Reviews List -->
  <section class="reviews-list py-8">
    <div class="container-app">
      <div
        class="glass-effect rounded-3xl p-6"
        data-controller="admin-reviews"
      >
        <!-- List Header -->
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-white">
            <i class="fas fa-list text-primary mr-2"></i>
            Liste des Avis
          </h3>

          <!-- Select All Checkbox -->
          <div class="flex items-center space-x-4">
            <label class="flex items-center space-x-2">
              <input
                type="checkbox"
                class="w-4 h-4 text-primary bg-transparent border-gray-300 rounded focus:ring-primary"
                data-admin-reviews-target="selectAll"
                data-action="change->admin-reviews#toggleSelectAll"
              >
              <span class="text-sm text-gray-400">Tout sélectionner</span>
            </label>

            <span class="text-sm text-gray-400">
              <%= @reviews.count %> résultats
            </span>
          </div>
        </div>

        <!-- Reviews Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <% if @reviews.any? %>
            <% @reviews.each do |review| %>
              <%= render 'review_card', review: review %>
            <% end %>
          <% else %>
            <!-- Empty State -->
            <div class="col-span-full text-center py-12">
              <i class="fas fa-star text-6xl text-gray-600 mb-4"></i>
              <h3 class="text-xl font-semibold text-gray-400 mb-2">Aucun avis trouvé</h3>
              <p class="text-gray-500">
                <% if params[:q].present? || params[:rating].present? %>
                  Essayez de modifier vos critères de recherche
                <% else %>
                  Aucun avis n'a encore été publié
                <% end %>
              </p>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @reviews.respond_to?(:total_pages) && @reviews.total_pages > 1 %>
          <div class="mt-8 flex justify-center">
            <%= paginate @reviews, theme: 'twitter_bootstrap_4' %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Quick Analytics Section -->
  <section class="analytics-overview py-8">
    <div class="container-app">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Top Rated Movies -->
        <div class="glass-effect rounded-3xl p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-white">
              <i class="fas fa-trophy text-primary mr-2"></i>
              Films les mieux notés
            </h3>
          </div>

          <div class="space-y-4">
            <% @top_movies.each_with_index do |movie, index| %>
              <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-xl">
                <div class="w-8 h-8 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center text-white font-bold text-sm">
                  <%= index + 1 %>
                </div>
                <div class="flex-1">
                  <h4 class="text-white font-semibold"><%= movie.title %></h4>
                  <div class="flex items-center space-x-2 text-sm text-gray-400">
                    <span class="flex items-center">
                      <i class="fas fa-star text-yellow-400 mr-1"></i>
                      <%= movie.avg_rating&.round(1) || 0 %>/5
                    </span>
                    <span>•</span>
                    <span><%= movie.reviews_count %> avis</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Most Active Reviewers -->
        <div class="glass-effect rounded-3xl p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-white">
              <i class="fas fa-user-edit text-primary mr-2"></i>
              Utilisateurs les plus actifs
            </h3>
          </div>

          <div class="space-y-4">
            <% @active_reviewers.each_with_index do |reviewer, index| %>
              <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-xl">
                <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                  <%= index + 1 %>
                </div>
                <div class="w-10 h-10 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center text-white font-bold text-sm">
                  <%= reviewer.full_name&.first(2)&.upcase || reviewer.email&.first(2)&.upcase %>
                </div>
                <div class="flex-1">
                  <h4 class="text-white font-semibold">
                    <%= reviewer.full_name || 'Utilisateur' %>
                  </h4>
                  <div class="flex items-center space-x-2 text-sm text-gray-400">
                    <span><%= reviewer.reviews_count %> avis</span>
                    <span>•</span>
                    <span class="flex items-center">
                      Moyenne: <i class="fas fa-star text-yellow-400 ml-1 mr-1"></i>
                      <%= reviewer.avg_rating_given&.round(1) || 0 %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
