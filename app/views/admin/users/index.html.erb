<%= render 'admin/dashboard/navbar' %>

<div
  class="admin-dashboard min-h-screen bg-dark-400"
  data-controller="admin-dashboard admin-flash"
>
  <!-- Page Header -->
  <div class="dashboard-header">
    <div class="welcome-section glass-effect rounded-3xl p-8 mt-20">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <!-- Title Section -->
        <div class="flex-1 min-width-0">
          <h1 class="text-4xl lg:text-5xl font-bold mb-3 gradient-text">
            <i class="fas fa-users mr-4"></i>
            Gestion des Utilisateurs
          </h1>
          <p class="text-xl text-gray-300 mb-2">
            Administration et gestion des rôles
          </p>
          <p class="text-gray-400 text-base">
            <%= @stats[:total] %> utilisateurs au total • <%= @stats[:admins] %> administrateurs
          </p>
        </div>

          <!-- Bulk Actions -->
          <div class="bulk-actions hidden" id="bulk-actions">
            <button
              class="px-4 py-2 bg-purple-500/20 hover:bg-purple-500/30 text-purple-400 rounded-xl transition-colors"
              data-action="click->admin-users#bulkPromoteCreator"
            >
              <i class="fas fa-palette mr-2"></i>
              Promouvoir créateur
            </button>
            <button
              class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-xl transition-colors"
              data-action="click->admin-users#bulkPromoteAdmin"
            >
              <i class="fas fa-crown mr-2"></i>
              Promouvoir admin
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <section class="stats-overview py-6">
    <div class="container-app">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-users text-blue-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-blue-400 mb-2">
            <%= @stats[:total] %>
          </div>
          <div class="text-sm text-gray-400">Total Utilisateurs</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-red-500/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-crown text-red-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-red-400 mb-2">
            <%= @stats[:admins] %>
          </div>
          <div class="text-sm text-gray-400">Administrateurs</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-palette text-purple-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-purple-400 mb-2">
            <%= @stats[:creators] %>
          </div>
          <div class="text-sm text-gray-400">Créateurs</div>
        </div>

        <div class="metric-card glass-effect rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-green-400/10 rounded-xl flex items-center justify-center">
              <i class="fas fa-user-check text-green-400 text-xl"></i>
            </div>
          </div>
          <div class="text-3xl font-bold text-green-400 mb-2">
            <%= @stats[:active_users] %>
          </div>
          <div class="text-sm text-gray-400">Utilisateurs Actifs</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters Section -->
  <%= render 'filters' %>

  <!-- Users List -->
  <section class="users-list py-8">
    <div class="container-app">
      <div
        class="glass-effect rounded-3xl p-6"
        data-controller="admin-users"
      >
        <!-- List Header -->
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-white">
            <i class="fas fa-list text-primary mr-2"></i>
            Liste des Utilisateurs
          </h3>

          <!-- Select All Checkbox -->
          <div class="flex items-center space-x-4">
            <label class="flex items-center space-x-2">
              <input
                type="checkbox"
                class="w-4 h-4 text-primary bg-transparent border-gray-300 rounded focus:ring-primary"
                data-admin-users-target="selectAll"
                data-action="change->admin-users#toggleSelectAll"
              >
              <span class="text-sm text-gray-400">Tout sélectionner</span>
            </label>

            <span class="text-sm text-gray-400">
              <%= @users.count %> résultats
            </span>
          </div>
        </div>

        <!-- Users Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
          <% if @users.any? %>
            <% @users.each do |user| %>
              <%= render 'user_card', user: user %>
            <% end %>
          <% else %>
            <!-- Empty State -->
            <div class="col-span-full text-center py-12">
              <i class="fas fa-users text-6xl text-gray-600 mb-4"></i>
              <h3 class="text-xl font-semibold text-gray-400 mb-2">Aucun utilisateur trouvé</h3>
              <p class="text-gray-500">
                <% if params[:q].present? || params[:role].present? %>
                  Essayez de modifier vos critères de recherche
                <% else %>
                  Aucun utilisateur n'est encore inscrit
                <% end %>
              </p>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @users.respond_to?(:total_pages) && @users.total_pages > 1 %>
          <div class="mt-8 flex justify-center">
            <%= paginate @users, theme: 'twitter_bootstrap_4' %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
