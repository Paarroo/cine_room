<% initials = "#{creator.first_name.first}#{creator.last_name.first}".upcase %>
<div class="creator-card rounded-2xl overflow-hidden card-hover relative group cursor-pointer">
  <%= link_to creator_path(creator), class: "absolute inset-0 z-10", data: { turbo: false } do %><% end %>

  <!-- Image or initials -->
  <div class="relative h-72">
    <% if creator.avatar.attached? %>
      <%= image_tag creator.avatar.variant(resize_to_fill: [600, 288]).processed,
          class: "w-full h-full object-cover object-center",
          style: "min-width: 100%; min-height: 100%;",
          alt: "#{creator.full_name} avatar" %>
    <% else %>
      <div class="w-full h-full bg-gradient-to-br from-gold-500/20 to-amber-600/20 flex items-center justify-center">
        <div class="text-white text-5xl font-bold"><%= initials %></div>
      </div>
    <% end %>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-dark-400/90 to-amber-600/20 z-5"></div>
  </div>

  <!-- Creator info -->
  <div class="p-6 relative z-20">
    <h3 class="text-2xl font-bold mb-1">
      <%= "#{creator.first_name} #{creator.last_name}" %>
    </h3>

    <p class="text-gray-400 mb-3">RÃ©alisateur</p>

    <div class="flex items-center space-x-4 text-sm text-gray-400 mb-4">
      <span><i class="fas fa-film mr-1 text-gold-500"></i><%= creator.movies.approved.size %> films</span>
      <span><i class="fas fa-award mr-1 text-gold-500"></i>Award</span>
    </div>

    <% if creator.bio.present? %>
      <p class="text-gray-300 text-sm mb-4">"<%= truncate(creator.bio, length: 80) %>"</p>
    <% end %>

    <span onclick="event.stopPropagation();" class="z-20">
      <%= link_to "Voir profil", creator_path(creator), class: "px-4 py-2 bg-gold-500 hover:bg-gold-600 text-white rounded-xl transition-colors font-medium text-sm" %>
    </span>
  </div>
</div>
