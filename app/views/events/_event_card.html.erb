<!-- Event Card -->
<div class="event-card rounded-2xl overflow-hidden card-hover group cursor-pointer">
  <div class="relative h-72 bg-gradient-to-br from-red-500/20 to-pink-500/20">
    <div class="absolute inset-0 bg-gradient-to-t from-dark-300 via-transparent to-transparent"></div>

    <!-- "Popular" badge -->
    <div class="absolute top-4 left-4">
      <span class="bg-red-500/20 border border-red-500/30 px-3 py-1 rounded-full text-xs font-medium text-red-300">
        <i class="fas fa-fire mr-1"></i>Populaire
      </span>
    </div>

    <!-- Favorite button -->
    <div class="absolute top-4 right-4">
      <button onclick="event.stopPropagation();" class="w-10 h-10 glass-effect rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-colors">
        <i class="far fa-heart text-sm"></i>
      </button>
    </div>

    <!-- Title + director -->
    <div class="absolute bottom-4 left-4">
      <h3 class="text-2xl font-bold mb-1"><%= event.title %></h3>
      <p class="text-gray-300"><%= event.movie.director %></p>
    </div>

    <!-- Seats remaining -->
    <div class="absolute bottom-4 right-4 text-right">
     <% places_left = event.available_spots %>
      <% status_color = places_left <= 0 ? 'red' : (places_left < 5 ? 'orange' : 'green') %>
      <div class="bg-<%= status_color %>-500/20 border border-<%= status_color %>-500/30 text-<%= status_color %>-300 px-2 py-1 rounded-full text-xs mb-1">
        <%= pluralize(places_left, 'place') %>
      </div>
      
    </div>
  </div>

  <div class="p-6">
    <!-- Basic info -->
    <div class="flex items-center space-x-4 mb-4 text-sm text-gray-400">
      <span class="flex items-center">
        <i class="fas fa-tag mr-1 text-gold-500"></i><%= event.movie.genre %>
      </span>
      <span class="flex items-center">
        <i class="fas fa-clock mr-1 text-gold-500"></i><%= event.movie.duration %> min
      </span>
      <span class="flex items-center">
        <i class="fas fa-star mr-1 text-yellow-400"></i>
        <%= number_with_precision(event.movie.reviews.average(:rating) || 0, precision: 1) %>
      </span>
    </div>

    <!-- Date + venue -->
    <div class="space-y-2 mb-6">
      <div class="flex items-center text-gray-300">
        <i class="fas fa-calendar-alt mr-3 text-gold-500 w-4"></i>
        <span class="font-medium">
          <%= l(event.event_date, format: "%d %B %Y") %> à <%= event.start_time.strftime("%Hh%M") %>
        </span>
      </div>
      <div class="flex items-center text-gray-300">
        <i class="fas fa-map-marker-alt mr-3 text-gold-500 w-4"></i>
        <span><%= event.venue_name %>, <%= event.venue_address %></span>
      </div>
    </div>

    <!-- Price + CTA -->
    <div class="flex items-center justify-between">
      <div class="text-3xl font-bold gradient-text"><%= event.price_cents %>€</div>
      <% if places_left > 0 %>
          <%= link_to "Voir détails", event_path(event), data: { turbo: false }, class: "px-6 py-3 bg-white/10 hover:bg-white/20 text-white rounded-xl transition-colors duration-300 font-medium" %>
        <% else %>
          <button disabled class="px-6 py-3 bg-gray-600 text-gray-400 rounded-xl font-medium cursor-not-allowed">
            Complet
          </button>
       <% end %>

    </div>
  </div>
</div>
