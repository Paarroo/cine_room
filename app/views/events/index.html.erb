<turbo-frame id="events_results">
  <div id="events" class="page-content active mt-24">
    <section class="py-8 min-h-screen">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-12 text-center">
          <h1 class="text-4xl lg:text-6xl font-bold mb-4">
            Tous nos <span class="gradient-text">Événements</span>
          </h1>
          <p class="text-xl text-gray-400">Découvrez notre programmation complète</p>
        </div>

        <!-- Filter partial -->
        <%= render partial: "shared/filter_form",
            locals: {
              url: events_path,
              options: default_filter_options(:events)
            } %>

        <!-- Results -->
        <%= render "results" %>

      </div>
    </section>
  </div>
</turbo-frame>
