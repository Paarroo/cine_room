<div class="min-h-screen bg-dark-400 pt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 gradient-text">
        <i class="fas fa-heart mr-4 text-red-500"></i>
        Mes Films Favoris
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Retrouvez tous les films que vous avez ajoutés à vos favoris
      </p>
    </div>

    <% if @favorite_movies.any? %>
      <!-- Movies Count -->
      <div class="mb-8">
        <div class="glass-effect rounded-xl p-4 inline-block">
          <span class="text-gold-400 font-semibold">
            <i class="fas fa-film mr-2"></i>
            <%= pluralize(@favorite_movies.count, 'film favori', 'films favoris') %>
          </span>
        </div>
      </div>

      <!-- Movies Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        <% @favorite_movies.each do |movie| %>
          <div class="relative">
            <%= render 'movies/movie_card', movie: movie %>
            
            <!-- Quick Remove Button -->
            <div class="absolute top-2 left-2 z-40">
              <%= link_to favorite_path(current_user.favorites.find_by(movie: movie)), 
                  method: :delete,
                  data: { 
                    confirm: "Retirer ce film de vos favoris ?",
                    turbo_method: :delete 
                  },
                  class: "w-8 h-8 bg-red-500/80 hover:bg-red-500 rounded-full flex items-center justify-center text-white transition-colors",
                  title: "Retirer des favoris" do %>
                <i class="fas fa-times text-xs"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Actions Section -->
      <div class="mt-12 text-center">
        <div class="glass-effect rounded-xl p-6 inline-block">
          <h3 class="text-lg font-semibold text-white mb-4">
            <i class="fas fa-lightbulb mr-2 text-gold-400"></i>
            Découvrez plus de films
          </h3>
          <div class="flex flex-wrap justify-center gap-4">
            <%= link_to movies_path, 
                class: "px-6 py-3 bg-gold-500 hover:bg-gold-600 text-white rounded-xl transition-colors font-medium" do %>
              <i class="fas fa-search mr-2"></i>
              Explorer tous les films
            <% end %>
            
            <%= link_to events_path, 
                class: "px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-xl transition-colors font-medium" do %>
              <i class="fas fa-calendar mr-2"></i>
              Voir les événements
            <% end %>
          </div>
        </div>
      </div>

    <% else %>
      <!-- Empty State -->
      <div class="favorites-empty-state">
        <div class="glass-effect rounded-3xl p-12 max-w-md mx-auto">
          <i class="far fa-heart text-6xl text-gray-400 mb-6"></i>
          <h3 class="text-2xl font-bold text-white mb-4">Aucun film favori</h3>
          <p class="text-gray-400 mb-8">
            Vous n'avez pas encore ajouté de films à vos favoris. 
            Explorez notre collection et cliquez sur le cœur pour sauvegarder vos coups de cœur !
          </p>
          
          <div class="space-y-4">
            <%= link_to movies_path, 
                class: "block w-full px-6 py-3 bg-gold-500 hover:bg-gold-600 text-white rounded-xl transition-colors font-medium" do %>
              <i class="fas fa-film mr-2"></i>
              Découvrir les films
            <% end %>
            
            <%= link_to events_path, 
                class: "block w-full px-6 py-3 bg-blue-500/20 hover:bg-blue-500/30 text-blue-300 rounded-xl transition-colors font-medium" do %>
              <i class="fas fa-calendar mr-2"></i>
              Voir les événements
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>