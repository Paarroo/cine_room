<div id="movie-show" class="page-content active mt-8 ">
  <section class="py-20 relative">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Breadcrumb navigation -->
      <nav class="flex items-center space-x-2 text-sm text-gray-400 mb-8">
        <%= link_to "Accueil", root_path, class: "hover:text-gold-500 transition-colors" %>
        <i class="fas fa-chevron-right text-xs"></i>
        <%= link_to "Films", movies_path, class: "hover:text-gold-500 transition-colors" %>
        <i class="fas fa-chevron-right text-xs"></i>
        <span class="text-white"><%= @movie.title %></span>
      </nav>

      <!-- Movie Header -->
      <div class="flex flex-col lg:flex-row items-start gap-12 mb-16">
        <!-- Poster -->
        <div class="w-full lg:w-1/3 relative overflow-hidden rounded-2xl" style="height: 500px;">
          <% if @movie.poster.attached?%>
            <%= image_tag @movie.poster,
              alt: "#{@movie.title} poster",
              class: "absolute inset-0 w-full h-full object-cover object-center rounded-2xl", style: "min-height: 100%;" %>
          <% else %>
            <%= image_tag "default-poster.jpg",
              alt: "#{@movie.title} poster",
              class: "absolute inset-0 w-full h-full object-cover object-center rounded-2xl", style: "min-height: 100%;" %>  
          <% end %>
        </div>

        


        <!-- Info -->
        <div class="flex-1">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4"><%= @movie.title %></h1>
          <p class="text-lg text-gray-400 mb-2">
            <i class="fas fa-user text-gold-500 mr-2"></i>
            Réalisé par <%= link_to "#{@movie.user.first_name} #{@movie.user.last_name}", creator_path(@movie.user), class: "underline hover:text-gold-400" %>
          </p>
          <p class="text-sm text-gray-500 mb-6"><%= @movie.year %> · <%= @movie.genre %> · <%= @movie.duration %> min</p>

          <% if @movie.trailer_url.present? %>
            <div style="width: 100%; height: 300px;" class="rounded-xl overflow-hidden">
              <iframe
                width="100%"
                height="100%"
                src="<%= youtube_embed_url(@movie.trailer_url) %>"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
              </iframe>
            </div>
          <% end %>

          <% if @movie.synopsis.present? %>
            <h2 class="text-lg font-semibold text-white mb-2">Synopsis</h2>
            <p class="text-gray-300 leading-relaxed"><%= @movie.synopsis %></p>
          <% end %>
        </div>
      </div>

      <!-- Associated Events -->
      <% if @movie.events.any? %>
        <div class="mb-16">
          <h2 class="text-2xl font-bold mb-6">Projections à venir</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
            <% @movie.events.upcoming.each do |event| %>
              <div class="event-card rounded-2xl overflow-hidden card-hover group">
                <div class="relative h-48 bg-gradient-to-br from-cinema-blue/20 to-indigo-600/20">
                  <div class="absolute inset-0 bg-gradient-to-t from-dark-300 via-transparent to-transparent"></div>
                  <div class="absolute bottom-4 left-4">
                    <h3 class="text-xl font-bold text-white"><%= event.title %></h3>
                    <p class="text-sm text-gray-300"><%= l(event.event_date, format: "%d %B %Y") %> à <%= event.start_time.strftime("%Hh%M") %></p>
                  </div>
                </div>
                <div class="p-4 text-gray-400">
                  <p class="text-sm mb-3"><%= truncate(event.description, length: 100) %></p>
                  <%= link_to "Voir l’événement", event_path(event), class: "text-sm font-medium text-gold-500 hover:text-gold-400 transition" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Avis -->
      <div class="mt-16">
        <h2 class="text-2xl font-bold mb-4">Avis</h2>

        <% if @movie.reviews.any? %>
          <div class="space-y-6">
            <!-- Render all reviews using the shared partial -->
            <%= render partial: "reviews/review_card", collection: @movie.reviews.order(created_at: :desc), as: :review, locals: { show_event_context: true } %>
          </div>
        <% else %>
          <p class="text-gray-400">Aucun avis pour le moment. Soyez le premier à donner votre opinion !</p>
        <% end %>
      </div>


    </div>
  </section>
</div>
