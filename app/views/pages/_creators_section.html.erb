<section class="py-20 lg:py-32 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-6xl font-bold mb-6">
        <span class="gradient-text">Créateurs</span> en vedette
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Rencontrez les visionnaires du cinéma indépendant
      </p>
    </div>

    <!-- Featured creators grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @creators.each do |creator| %>
        <% initials = "#{creator.first_name.first}#{creator.last_name.first}".upcase %>

        <!-- Glow wrapper -->
        <div class="card-glow-wrapper group relative rounded-[1.875rem]">
          <!-- Actual card -->
          <div class="creator-card rounded-3xl overflow-hidden card-hover cursor-pointer nav-card relative">
            <%= link_to creator_path(creator), class: "absolute inset-0 z-30", data: { turbo: false } do %><span class="sr-only">Voir <%= creator.full_name %></span><% end %>

            <!-- Entire image background -->
            <div class="relative h-90 w-full">
              <% if creator.avatar.attached? %>
                <%= image_tag creator.avatar,
                  class: "absolute inset-0 w-full h-full object-cover z-0",
                  alt: "#{creator.full_name} avatar" %>
              <% else %>
                <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-black-500/20 to-amber-600/20 flex items-center justify-center z-0">
                  <div class="text-white text-5xl font-bold"><%= initials %></div>
                </div>
              <% end %>

              <!-- Gradient overlay -->
              <div class="absolute inset-0 bg-gradient-to-tr from-stone-900/80 to-amber-500/40 z-10"></div>

              <!-- Creator details -->
              <div class="absolute bottom-6 left-6 right-6 z-20 text-white">
                <h3 class="text-2xl font-bold mb-1"><%= "#{creator.first_name} #{creator.last_name}" %></h3>
                <p class="text-gray-300 mb-2">Réalisateur·rice</p>
                <div class="flex items-center space-x-4 text-sm text-gray-300">
                  <span><i class="fas fa-film mr-1"></i><%= creator.movies.approved.count %> films</span>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>

    <!-- CTA button -->
    <div class="text-center mt-16">
      <%= link_to "Voir tous les créateurs", creators_path,
        class: "nav-btn px-8 py-4 glass-effect hover:bg-white/10 text-white rounded-full font-semibold transition-all duration-300 hover:scale-105" %>
    </div>
  </div>
</section>
