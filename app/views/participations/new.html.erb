<% content_for :title, "Réservation pour #{@event.title}" %>

<div id="participation-new" class="mt-24">
  <section class="py-8 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      
      <nav class="flex items-center space-x-2 text-sm text-gray-400 mb-8">
        <%= link_to "Accueil", root_path, class: "hover:text-gold-500 transition-colors" %>
        <i class="fas fa-chevron-right text-xs"></i>
        <%= link_to "Événements", events_path, class: "hover:text-gold-500 transition-colors" %>
        <i class="fas fa-chevron-right text-xs"></i>
        <%= link_to @event.title, event_path(@event), class: "hover:text-gold-500 transition-colors" %>
        <i class="fas fa-chevron-right text-xs"></i>
        <span class="text-white">Réserver</span>
      </nav>

      <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
        
        <div class="xl:col-span-2">
          <div class="glass-effect rounded-3xl overflow-hidden">

            
            <div class="relative h-80 bg-gradient-to-br from-red-500/20 via-pink-500/20 to-purple-500/20">
              <div class="absolute inset-0 bg-gradient-to-t from-dark-400 via-dark-400/60 to-transparent"></div>
              <div class="absolute bottom-6 left-6 right-6">
                <h1 class="text-4xl lg:text-5xl font-bold mb-2 gradient-text"><%= @event.title %></h1>
                <p class="text-lg text-gray-300">Réalisé par <%= @event.movie.director %></p>
              </div>
            </div>

            
            <div class="p-8 space-y-6">
              <h2 class="text-2xl font-bold mb-4 text-white">Réserve ta place</h2>

             <%= form_with(model: [@event, @participation], local: true, data: { turbo: false }, class: "space-y-6") do |form| %>


                <% if @participation.errors.any? %>
                  <div class="bg-red-500/10 text-red-400 p-4 rounded-lg">
                    <h3 class="font-bold mb-2">Erreur :</h3>
                    <ul class="list-disc list-inside">
                      <% @participation.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div>
                  <%= form.label :seats, "Nombre de places", class: "block text-sm text-gray-300 mb-1" %>
                  <%= form.number_field :seats, min: 1, max: @event.available_spots,
                    class: "w-full rounded-lg border border-gray-600 bg-black text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gold-500" %>
                </div>

                <div class="pt-4">
                  <%= form.submit "Confirmer la réservation",
                    class: "w-full text-center bg-gradient-to-r from-gold-500 to-gold-600 hover:from-gold-600 hover:to-gold-700 text-black font-bold py-3 rounded-xl text-lg transition-all duration-300 hover:scale-105" %>
                </div>
              <% end %>

              <%= link_to "⬅ Retour à l’événement", event_path(@event),
                class: "inline-block text-sm text-gray-400 hover:text-gold-400 transition mt-6" %>
            </div>
          </div>
        </div>

        
        <div class="xl:col-span-1">
          <div class="sticky top-24 space-y-6">

            
            <div class="glass-effect rounded-3xl overflow-hidden">
              <div class="bg-gradient-to-r from-gold-500 to-gold-600 p-6 text-center">
                <div class="text-4xl font-bold mb-2"><%= number_to_currency(@event.price_cents, unit: "€") %></div>
                <div class="text-white/90">par personne</div>
              </div>

              <div class="p-6 space-y-6">
                <div>
                  <div class="flex justify-between items-center mb-3">
                    <span class="font-medium text-gray-300">Places disponibles</span>
                    <span class="text-lg font-bold text-green-400"><%= @event.max_capacity - @event.available_spots %>/<%= @event.max_capacity %></span>
                  </div>
                  <% pourcentage = ((@event.max_capacity - @event.available_spots).to_f / @event.max_capacity * 100).round %>
                  <div class="w-full bg-white/10 rounded-full h-3">
                    <div class="bg-gradient-to-r from-green-500 to-emerald-600 h-3 rounded-full transition-all duration-500" style="width: <%= pourcentage %>%"></div>
                  </div>
                  <p class="text-sm text-gray-400 mt-3">
                    <i class="fas fa-clock mr-2"></i>Réservation possible jusqu'à 2h avant
                  </p>
                </div>

                <%= link_to "Réserver maintenant", "#",
                  class: "w-full block text-center bg-gradient-to-r from-gold-500 to-gold-600 hover:from-gold-600 hover:to-gold-700 text-white font-bold py-4 rounded-xl text-lg transition-all duration-300 hover:scale-105 pointer-events-none opacity-50" %>
              </div>
            </div>

           
            <div class="glass-effect rounded-3xl p-6 space-y-6">
              <h3 class="text-xl font-bold mb-4">
                <i class="fas fa-map-marker-alt text-gold-500 mr-2"></i>
                Lieu de l'événement
              </h3>
              <div class="text-gray-300 space-y-2">
                <p class="font-bold text-white"><%= @event.venue_name %></p>
                <p class="text-sm"><%= @event.venue_address %></p>
              </div>

              <div class="h-40 bg-white/5 rounded-xl flex items-center justify-center text-gray-400">
                <div class="text-center">
                  <i class="fas fa-map text-3xl mb-2"></i>
                  <p class="text-sm">Carte interactive</p>
                </div>
              </div>

              <div class="text-sm text-gray-400 space-y-2">
                <div class="flex items-center"><i class="fas fa-subway mr-3 text-gold-500"></i>Métro Saint-Paul (ligne 1) - 3 min à pied</div>
                <div class="flex items-center"><i class="fas fa-parking mr-3 text-gold-500"></i>Parking public rue de Rivoli</div>
              </div>

              <div class="pt-4 border-t border-white/10 text-sm space-y-2 text-gray-400">
                <div class="flex items-center"><i class="fas fa-check-circle text-green-400 mr-3"></i>Confirmation immédiate</div>
                <div class="flex items-center"><i class="fas fa-shield-alt text-green-400 mr-3"></i>Annulation jusqu'à 24h avant</div>
                <div class="flex items-center"><i class="fas fa-lock text-green-400 mr-3"></i>Paiement sécurisé</div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>
</div>

