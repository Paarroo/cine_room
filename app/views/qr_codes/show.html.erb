                        <div class="absolute top-4 left-12 w-2 h-2 bg-black"></div>
                        <div class="absolute top-8 left-6 w-2 h-2 bg-black"></div>
                        <div class="absolute top-12 right-8 w-2 h-2 bg-black"></div>
                        <div class="absolute bottom-8 left-16 w-2 h-2 bg-black"></div>
                        <div class="absolute bottom-12 right-6 w-2 h-2 bg-black"></div>
                        <div class="absolute top-6 right-12 w-2 h-2 bg-black"></div>
                        <div class="absolute bottom-6 right-16 w-2 h-2 bg-black"></div>
