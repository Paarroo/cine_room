                      qrcode = RQRCode::QRCode.new(@participation.qr_code_data)
                      qr_svg = qrcode.as_svg(
                        color: '000',
                        shape_rendering: 'crispEdges',
                        module_size: 3,
                        standalone: true,
                        svg_attributes: {
