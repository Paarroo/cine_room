                    <!-- Debug: afficher le token aussi -->
                    <div class="text-xs text-gray-500 mt-2 text-center">
                      Token: <%= @participation.qr_code_token.slice(0, 8) %>...
                    </div>
                  <% rescue => e %>
                    <!-- Fallback si la gem RQRCode n'est pas disponible -->
                    <div class="w-full h-full bg-white rounded-xl flex flex-col items-center justify-center p-4 border border-gray-300">
                      <!-- Debug info -->
                      <div class="text-xs text-red-500 mb-2">Erreur QR: <%= e.message %></div>
                      
                      <!-- QR Code pattern simul√© -->
                      <div class="relative w-48 h-48 bg-white border-2 border-black mb-4">
                        <!-- Coins QR caract√©ristiques -->
                        <div class="absolute top-2 left-2 w-8 h-8 bg-black"></div>
                        <div class="absolute top-2 right-2 w-8 h-8 bg-black"></div>
                        <div class="absolute bottom-2 left-2 w-8 h-8 bg-black"></div>
                        
                        <!-- Pattern central avec token -->
                        <div class="absolute inset-0 flex items-center justify-center">
                          <div class="text-center p-2 bg-white border border-gray-400 rounded">
                            <div class="text-xs font-mono text-black break-all max-w-32">
