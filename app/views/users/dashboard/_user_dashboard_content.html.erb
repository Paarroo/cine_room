<div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
  <!-- 👤 Profile section -->
  <div class="glass-effect p-6 rounded-2xl h-fit space-y-4">
    <h3 class="text-2xl font-semibold text-white">
      <i class="fas fa-user mr-2 text-gold-500"></i>Mon profil
    </h3>
    <p class="text-gray-300"><strong>Nom :</strong> <%= user.full_name %></p>
    <p class="text-gray-300"><strong>Bio :</strong> <%= user.bio %></p>
    <p class="text-gray-300"><strong>Email :</strong> <%= user.email %></p>

    <%= link_to "Modifier mon compte", edit_user_registration_path, class: "text-sm text-gold-400 hover:underline block" %>
    <%= link_to "Modifier mon profil", edit_profile_users_dashboard_path(user), class: "text-sm text-gold-400 hover:underline block" %>

    <!-- 📊 Stats section -->
    <div class="mt-6 border-t border-white/10 pt-4">
      <h4 class="text-lg font-semibold text-white mb-2">
        <i class="fas fa-chart-bar mr-2 text-gold-500"></i>Statistiques
      </h4>
      <p class="text-gray-300"><strong>Réservations à venir :</strong> <%= upcoming_participations.count %></p>
      <p class="text-gray-300"><strong>Événements passés :</strong> <%= past_participations.count %></p>
      <p class="text-gray-300"><strong>Commentaires écrits :</strong> <%= user.reviews.count %></p>
      <p class="text-gray-300"><strong>Films favoris :</strong> <%= user.favorites.count %></p>

      <%= button_to "📥 Télécharger mes données", data_export_users_dashboard_path(user, format: :csv), method: :get,
        class: "mt-4 inline-block bg-gold-500 hover:bg-gold-600 text-white text-sm font-semibold py-2 px-4 rounded-full transition" %>
    </div>
  </div>

  <!-- 📅 Upcoming Events + 🕓 Past Events + ✍️ Reviews -->
  <div class="xl:col-span-2 space-y-8">
    <!-- Upcoming Events -->
    <div class="glass-effect p-6 rounded-2xl">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-2xl font-semibold text-white">
          <i class="fas fa-calendar-alt mr-2 text-gold-500"></i>Prochains événements
        </h3>
        <% if upcoming_participations.size > 3 %>
          <%= link_to "Voir tout", upcoming_participations_users_dashboard_path(user), class: "text-sm text-gold-400 hover:underline" %>
        <% end %>
      </div>
      <% if upcoming_participations.any? %>
        <% upcoming_participations.first(3).each do |p| %>
          <div class="bg-dark-300/30 border border-white/10 p-4 rounded-xl mb-4 text-gray-200">
            <div class="flex justify-between items-center">
              <div class="flex-1">
                <strong><%= p.event.title %></strong> – <%= l(p.event.event_date, format: :long) %>
                <p class="text-sm text-gray-400">Lieu : <%= p.event.venue_name %></p>
                <p class="text-xs text-green-400 mt-1">
                  <%= pluralize(p.seats, 'place') %> • 
                  <span class="capitalize"><%= p.status %></span>
                </p>
              </div>
              <div class="flex space-x-2">
                <%= link_to participation_ticket_path(p), 
                    class: "bg-orange-600 hover:bg-orange-700 text-white px-3 py-1 rounded-lg text-xs transition-colors flex items-center space-x-1" do %>
                  <span>🎫</span>
                  <span>Billet</span>
                <% end %>
                <%= link_to participation_qr_code_path(p), 
                    class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-lg text-xs transition-colors flex items-center space-x-1" do %>
                  <span>📱</span>
                  <span>QR</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-400">Aucune participation prévue.</p>
      <% end %>
    </div>

    <!-- ... partie précédente inchangée ... -->

<!-- Past Events -->
<div class="glass-effect p-6 rounded-2xl">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-2xl font-semibold text-white">
      <i class="fas fa-history mr-2 text-gold-500"></i>Historique
    </h3>
    <% if past_participations.size > 3 %>
      <%= link_to "Voir tout", past_participations_users_dashboard_path(user), class: "text-sm text-gold-400 hover:underline" %>
    <% end %>
  </div>
  <% if past_participations.any? %>
    <% past_participations.first(3).each do |p| %>
      <div class="bg-dark-300/30 border border-white/10 p-4 rounded-xl mb-4 text-gray-200">
        <div class="flex justify-between items-center">
          <div>
            <strong><%= p.event.title %></strong> – <%= l(p.event.event_date, format: :long) %>
            <p class="text-sm text-gray-400">Lieu : <%= p.event.venue_name %></p>
            <p class="text-sm text-gray-400">Film : <%= p.event.movie.title %></p>
          </div>
          <div class="flex flex-col items-end gap-1 text-right">
            <%= link_to "Voir le film", movie_path(p.event.movie), class: "text-sm text-gold-400 hover:underline" %>

            <% if (r = user.reviews.find_by(event: p.event)) %>
              <%= link_to "Modifier l’avis", edit_event_review_path(p.event, r), class: "text-sm text-blue-400 hover:underline" %>
            <% else %>
              <%= link_to "Laisser un avis", new_event_review_path(p.event), class: "text-sm text-gold-400 hover:underline" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-400">Aucun événement passé.</p>
  <% end %>
</div>

<!-- User Favorites -->
<div class="glass-effect p-6 rounded-2xl">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-2xl font-semibold text-white">
      <i class="fas fa-heart mr-2 text-red-400"></i>Mes favoris
    </h3>
    <% if user.favorites.count > 4 %>
      <%= link_to "Voir tous mes favoris", favorites_path, class: "text-sm text-gold-400 hover:underline" %>
    <% end %>
  </div>
  <% if user.favorites.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <% user.favorite_movies.limit(4).each do |movie| %>
        <div class="bg-dark-300/30 border border-white/10 rounded-xl overflow-hidden group hover:border-red-400/30 transition-all duration-300">
          <div class="relative h-32">
            <% if movie.poster.attached? %>
              <%= image_tag movie.poster, alt: "#{movie.title} poster", class: "w-full h-full object-cover" %>
            <% else %>
              <%= image_tag "default-poster.jpg", alt: "#{movie.title} poster", class: "w-full h-full object-cover opacity-50" %>
            <% end %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <div class="absolute bottom-2 left-2 right-2">
              <h4 class="text-white font-semibold text-sm truncate"><%= movie.title %></h4>
              <p class="text-gray-300 text-xs truncate"><%= movie.director %></p>
            </div>
          </div>
          <div class="p-3">
            <div class="flex justify-between items-center">
              <%= link_to "Voir le film", movie_path(movie), class: "text-xs text-gold-400 hover:underline" %>
              <button class="text-red-400 hover:text-red-500 transition-colors"
                      data-controller="favorites"
                      data-action="click->favorites#toggle"
                      data-favorites-movie-id-value="<%= movie.id %>"
                      data-favorites-favorited-value="true"
                      data-favorites-favorite-id-value="<%= user.favorites.find_by(movie: movie)&.id %>">
                <i class="fas fa-heart text-sm"></i>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <i class="fas fa-heart text-4xl text-gray-500 mb-3"></i>
      <p class="text-gray-400 mb-4">Vous n'avez encore aucun film favori.</p>
      <%= link_to "Découvrir des films", movies_path, class: "inline-block bg-gold-500 hover:bg-gold-600 text-white px-6 py-2 rounded-full font-medium transition-colors" %>
    </div>
  <% end %>
</div>

<!-- User Reviews -->
<div class="glass-effect p-6 rounded-2xl">
  <h3 class="text-2xl font-semibold text-white mb-4">
    <i class="fas fa-star mr-2 text-gold-500"></i>Mes critiques
  </h3>
  <% if user.reviews.any? %>
    <div class="space-y-4">
      <% user.reviews.order(created_at: :desc).each do |review| %>
        <div class="bg-dark-300/30 border border-white/10 p-4 rounded-xl text-gray-200">
          <strong class="text-white text-lg"><%= review.movie.title %></strong>
          <span class="text-yellow-400 ml-2"><%= "★" * review.rating %></span>

          <p class="text-sm text-gray-400 mt-1 italic">« <%= truncate(review.comment, length: 100) %> »</p>

          <div class="mt-2 flex gap-4 flex-wrap">
            <%= link_to "Voir l'événement", event_path(review.event), class: "text-sm text-gold-400 hover:underline" %>
            <%= link_to "Voir le film", movie_path(review.movie), class: "text-sm text-gold-400 hover:underline" %>
            <%= link_to "Modifier l’avis", edit_event_review_path(review.event, review), class: "text-sm text-blue-400 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-400">Vous n’avez laissé aucun avis pour le moment.</p>
  <% end %>
</div>

  </div>
</div>
